@model WebApplication.Models.BranchModel
@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>

    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
 

</head>





    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="adminbranch" asp-action="addbranch" autocomplete="off">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input asp-for="Location" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add branch" class="btn btn-primary" />
                    </div>

                    @{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Branch added</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Branch could not added</p>"); }

                </form>
            </div>
        </div>
    </div>

