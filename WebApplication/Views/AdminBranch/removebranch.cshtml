@model WebApplication.Models.BranchModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>

    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/autocomplete.css")" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/js/JavaScript.js")"></script>

</head>





    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="adminbranch" asp-action="removebranch">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" id="name" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Remove Branch" class="btn btn-primary btn-danger" />
                    </div>

                    @{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Branch removed</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Branch could not be removed</p>"); }

                </form>
            </div>
        </div>
    </div>


<script>
        autocomplete(document.getElementById("name"),"GetBranchNames");
</script>