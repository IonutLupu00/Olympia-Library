@model Olympia_Library.Models.HomeModel.HomeIndexModel

@{ ViewData["Title"] = "Home Page"; }

<head>
    <link rel="stylesheet" href="/css/indexStyle.css" />
    <script src="~/js/autocomplete.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/js/JavaScript.js"></script>
</head>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<div class="container mainIndex">
    <div class="col-lg-12">
        <form enctype="multipart/form-data" asp-controller="Home" asp-action="Search" method="post">
            <div class="form-group">
                <input id="searchInput" asp-for="SearchQuery" type="text" class="form-control " placeholder="Search..." />
            </div>

        </form>
        <div class="row genreCarousel">

            <h2>Browse Genres</h2>
            <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="genre-carousel" data-interval="1000">

                <div class="MultiCarousel-inner">
                    @foreach (var genre in Model.Genres)
                    {
        <div class="item">


            <a asp-controller="Genre" asp-action="Index" asp-route-id="@genre.Id">
                <h4>@genre.Name</h4>
                <img class="genre-image" src="@genre.ImageUrl" />
            </a>


        </div>}
                </div>

                <button class="btn btn-primary leftLst"> &larr;</button>
                <button class="btn btn-primary rightLst">&rarr;</button>
            </div>
        </div>

        <div class="row homeIndexSection">


            <div class=" latestAdditions">
                <h2>Latest Additions</h2>
                @foreach (var book in Model.LatestAdditions)
                {
    <div class="latest-additions-book">

        <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.BookId">
            <img class="latest-additions-image" src="@book.ImageUrl" />
        </a>


    </div>}
            </div>

        </div>
    </div>





</div>

