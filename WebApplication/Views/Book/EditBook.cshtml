@model WebApplication.Models.BookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>

    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/autocomplete.css")" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/js/JavaScript.js")"></script>


</head>

<body>
    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form method="post" enctype="multipart/form-data" asp-controller="Book" asp-action="EditBook">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Old Title</label>
                        <input asp-for="Title" id="title" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewTitle" class="control-label">New Title</label>
                        <input asp-for="NewTitle" id="title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorName" class="control-label">New Author</label>
                        <input asp-for="AuthorName" id="authorName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">New Price</label>
                        <input asp-for="Price" id="price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label">New Genre</label>
                        <input asp-for="Genre" id="genre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">New Description</label>
                        <input asp-for="Description" id="description" class="form-control" />
                    </div>


                    <div class="form-group">
                        
                            <p>New Book Cover</p>
                            <input type="file" asp-for="CoverImage" />
                        
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-dark" />
                    </div>
                    @{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Book details changed</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Book details could not be changed</p>"); }

                </form>
            </div>
        </div>
    </div>

</body>

<script>
    autocomplete(document.getElementById("authorName"), "GetAuthors");
</script>

<script>
    autocomplete(document.getElementById("title"), "GetTitles");
</script>

<script>
    autocomplete(document.getElementById("genre"), "GetGenres");
</script>