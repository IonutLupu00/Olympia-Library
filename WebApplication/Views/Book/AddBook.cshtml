@model WebApplication.Models.BookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>

    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/autocomplete.css")" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/js/JavaScript.js")"></script>


</head>
<body>
<div class="divBg">
    <div class="row text-center">
        <div class="col-md-6">


            <form method="post" enctype="multipart/form-data" asp-action="AddBook">

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="AuthorName" class="control-label"></label>
                    <input asp-for="AuthorName" class="form-control" id="authorName" required />
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" id="genre" required />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" id="price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" id="description" required />
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <p>Upload Book Cover</p>
                        <input type="file" asp-for="CoverImage" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <input type="submit" />
                    </div>
                </div>

                @{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Book added </p>"); }
                @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Book could not be added</p>"); }

            </form>

        </div>
    </div>
</div>
    
</body>
<script>
    autocomplete(document.getElementById("authorName"),"GetAuthors");
</script>
<script>
    autocomplete(document.getElementById("genre"), "GetGenres");
</script>

