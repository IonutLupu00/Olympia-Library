@page
@model LoginModel

@{ 
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/account.css")" />

<h1>@ViewData["Title"]</h1>
<div class="col-md-10 offset-md-1">
    <section>
        <img id="login" class="center"   src="~/images/login.jpg" />
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <b><label asp-for="Input.Email"></label></b>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Input.Password"></label></b>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <b>
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </b>
                </div>
            </div>
            <div class="form-group">
                <b><button type="submit" style="color:white" class="btn btn-primary btn-danger btn-block">Log in</button></b>
            </div>
            <div class="form-group">
                <p>
                    <b> <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></b>
                </p>

            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
