@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<link rel="stylesheet" type="text/css" href="@Url.Content("~/css/account.css")"
<h1>@ViewData["Title"]</h1>
<h4 style="color:black;font-style:normal"><b>Enter your email.</b></h4>
<hr />
<div class="row">
    <svg xmlns="http://www.w3.org/2000/svg" style="color:black" width="30" height="30" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 17 17">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
        <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
    </svg>
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <b> <label asp-for="Input.Email"></label></b>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <b> <button type="submit"style="color:white" class="btn btn-primary btn-danger">Submit</button></b>
            <br />
            <div>
                <a style="color:black; font-size:x-large;" class="nav-link" href="/Identity/Account/Login"><b>Login</b> </a>
            </div>
        </form>
    </div>
    <img id="mark" width="400px" src="~/images/mark.jpg" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
